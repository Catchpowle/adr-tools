{
  "name": "@meza/adr-tools",
  "version": "0.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "commit": "commit",
    "ci": "npm set editor '' && yarn lint && yarn test",
    "ci:dev": "exit 0",
    "clean": "rm -rf dist .cache/tsbuildinfo",
    "clean:all": "yarn clean && rm -rf node_modules .cache",
    "lint:eslint": "eslint . --ext .ts --ext .json --cache --cache-location .cache",
    "lint:tsc": "tsc",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:tsc",
    "lint": "yarn lint:eslint && yarn lint:tsc",
    "test": "vitest",
    "prepare": "husky install",
    "report": "exit 0",
    "release": "standard-version"
  },
  "dependencies": {
    "@types/inquirer": "^8.2.1",
    "@types/marked": "^4.0.3",
    "@types/node": "^18.0.0",
    "chalk": "^4.1.2",
    "commander": "^9.3.0",
    "core-js": "^3.19.1",
    "inquirer": "^8.2.4",
    "marked": "^4.0.17"
  },
  "standard-version": {
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ],
    "packageFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "post-merge": "install-deps-postmerge",
      "pre-push": "yarn ci",
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/prompt-cli": "^17.0.0",
    "@meza/tsconfig-base": "^1.1.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vitest/ui": "^0.15.2",
    "c8": "^7.11.3",
    "eslint": "^8.1.0",
    "eslint-config-tailored-tunes": "^5.0.2",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.1",
    "install-deps-postmerge": "^2.0.1",
    "mock-cwd": "^1.0.0",
    "standard-version": "^9.3.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2",
    "vitest": "^0.15.2",
    "yarn": "^1.22.17"
  }
}
