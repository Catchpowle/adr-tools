{
  "extends": "@meza/tsconfig-base",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "emitDeclarationOnly": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "isolatedModules": true,
    "sourceRoot": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "noPropertyAccessFromIndexSignature": false
    }
  }
}
